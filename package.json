{
  "name": "konkani-collector",
  "version": "1.0.0",
  "description": "Recording collection system for Amchi Konkani ASR training",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "nodemon backend/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:integration": "jest --testPathPattern=tests/integration",
    "import-story": "node scripts/import-story.js",
    "export-asr": "node scripts/export-asr-manifest.js",
    "verify-audio": "node scripts/verify-audio.js",
    "process-recordings": "node scripts/process-recordings.js",
    "check-ffmpeg": "node scripts/check-ffmpeg.js",
    "convert-single-recording": "node scripts/convert-single-recording.js",
    "copy-ffmpeg-local": "node scripts/copy-ffmpeg.js",
    "clear-recordings": "node scripts/clear-recordings.js"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/backend/routes/test.js"
    ]
  },
  "keywords": [
    "asr",
    "konkani",
    "speech-recognition",
    "audio-collection"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.450.0",
    "@aws-sdk/lib-storage": "^3.450.0",
    "commander": "^11.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "fluent-ffmpeg": "^2.1.2",
    "multer": "^1.4.5-lts.1",
    "music-metadata": "^9.0.0",
    "pg": "^8.11.3",
    "sanscript": "^0.0.2",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "form-data": "^4.0.5",
    "jest": "^29.7.0",
    "node-fetch": "^3.3.2",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
